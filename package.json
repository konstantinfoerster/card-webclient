{
  "name": "webapp-cards",
  "description": "Manage your cards with ease",
  "license": "MIT",
  "author": "Konstantin FÃ¶rster",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner \"test/**/*.test.js\" --puppeteer",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze",
    "start:build": "NODE_ENV=production web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement --exclude dist",
    "start": "web-dev-server"
  },
  "vaadin": {
    "disableUsageStatistics": true
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "@shoelace-style/shoelace": "^2.0.0-beta.83",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.1",
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^8.0.2",
    "@open-wc/testing": "3.1.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-rollup": "^0.3.19",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-puppeteer": "^0.10.5",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "rules": {
      "class-methods-use-this": "warn",
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "state"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
