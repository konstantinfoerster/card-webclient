{
  "name": "webapp-cards",
  "description": "Manage your cards with ease",
  "license": "MIT",
  "author": "Konstantin FÃ¶rster",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner \"test/**/*.test.js\" --puppeteer",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze",
    "start:build": "NODE_ENV=production web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement --exclude dist",
    "start": "web-dev-server"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "@shoelace-style/shoelace": "^2.0.0-beta.75",
    "@vaadin/router": "^1.7.4",
    "lit": "^2.2.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "next",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^4.0.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-rollup": "^0.3.17",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-puppeteer": "^0.10.5",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
